---
import Badge from "./Badge.astro";

interface Props {
  imageURL: string;
  name: string;
  title: string;
  highlightedBadges: string[];
  badges: string[];
  href: string;
}

const { imageURL, href, name, title, highlightedBadges, badges } = Astro.props;
---

<div
  class="w-[88vw] rounded-xl border-y-2 border-b-border-gradient-2/10 border-t-border-gradient-1/10 bg-gradient-to-br from-glass-gradient-1/60 from-0% via-glass-gradient-2/60 via-90% to-glass-gradient-3/60 to-100% text-foreground shadow-lg lg:w-96"
>
  <a
    href={href}
    class="flex flex-row-reverse items-center justify-between p-6 lg:flex-col"
  >
    <img src={imageURL} class="size-24 rounded-full sm:size-36 md:size-48" />
    <div
      class="flex flex-col lg:h-48 lg:items-center lg:justify-between lg:pt-4"
    >
      <div class="flex flex-col pb-6 lg:items-center">
        <span
          class="text-lg font-bold sm:text-2xl md:text-4xl lg:text-center lg:text-3xl"
        >
          {name}
        </span>
        <p class="text-md pt-1 sm:text-xl md:text-2xl lg:text-xl">
          {title}
        </p>
      </div>
      <div class="flex space-x-2 lg:space-x-4">
        {
          highlightedBadges.map((badge) => (
            <Badge style="bg-orange text-orange-foreground" text={badge} />
          ))
        }
        {badges.map((badge) => <Badge style="bg-badge" text={badge} />)}
      </div>
    </div>
  </a>
</div>
