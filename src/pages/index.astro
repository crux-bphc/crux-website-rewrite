---
import GithubIcon from "../../public/github.svg?raw";
import InstagramIcon from "../../public/instagram.svg?raw";
import LinkedInIcon from "../../public/linkedin.svg?raw";
import MailIcon from "../../public/mail.svg?raw";
import Logo from "../../public/logoMainPage.svg?raw";
import Footer from "../components/Footer.astro";
import HomeCard from "../components/HomeCard.astro";
import LandingPageMenu from "../components/LandingPageMenu.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <main id="main" class="bg-background">
    <div>
      <div class="absolute left-12 top-12 z-10 text-5xl font-extrabold">
        <span class="text-foreground-muted">CRUx</span><span
          class="text-primary">.</span
        >
      </div>
      <div
        class="fixed left-0 top-0 z-0 flex h-dvh w-full items-center justify-center"
      >
        <div
          class="size-56 text-foreground-bright opacity-45 sm:size-72 md:size-96 landscape:size-56 landscape:lg:size-96"
        >
          <Fragment set:html={Logo} />
        </div>
      </div>
      <button
        onclick="document.getElementById('club-about').scrollIntoView()"
        class="material-symbols-rounded absolute inset-x-0 bottom-24 mx-auto w-fit rounded-full bg-foreground-muted/20 p-4 text-foreground transition-colors duration-200 ease-in-out hover:bg-foreground-muted/30"
        >arrow_downward</button
      >
      <div class="-z-50 flex h-[calc(100dvh-4rem)] w-full bg-background"></div>
      <div
        class="sticky -top-16 z-50 flex h-0 w-full items-center justify-start text-2xl font-bold text-foreground-muted"
      >
        <div class="size-16 translate-y-8 bg-navbar lg:w-[7.5rem]"></div>
      </div>
    </div>
    <div
      id="club-about"
      class="sticky top-0 z-40 h-16 w-full select-none bg-navbar font-bold text-foreground-muted md:text-xl lg:text-2xl"
    >
      <div class="absolute left-8 top-0 flex h-16 items-center lg:left-16">
        <div class="size-8 text-foreground-muted lg:size-12">
          <Fragment set:html={Logo} />
        </div>
      </div>
      <div
        class="hidden h-full items-center justify-center space-x-12 sm:flex md:space-x-12 lg:space-x-18 xl:space-x-32"
      >
        <a
          class="text-foreground-muted transition-all duration-300 hover:text-purple hover:underline"
          href="/achievements">Achievements</a
        >
        <a
          class="text-foreground-muted transition-all duration-300 hover:text-light-blue hover:underline"
          href="/projects">Projects</a
        >
        <a
          class="text-foreground-muted transition-all duration-300 hover:text-orange hover:underline"
          href="/members">Members & Alumni</a
        >
        <a
          class="text-foreground-muted transition-all duration-300 hover:text-primary hover:underline"
          href="/blog">Blog</a
        >
      </div>
      <div
        class="absolute right-8 top-0 flex h-16 items-center sm:hidden lg:left-16"
      >
        <LandingPageMenu client:only="svelte" />
      </div>
    </div>
    <div
      class="z-30 w-full rounded-xl bg-transparent backdrop-blur-xl backdrop-brightness-[80%]"
    >
      <div
        class="landscape:thin:h-[90dvw] z-30 h-[75dvh] snap-center md:h-[80dvh]"
      >
        <div
          class="absolute left-8 top-20 z-30 sm:left-20 sm:top-20 md:left-36 md:top-36"
        >
          <div>
            <span
              class="z-50 text-3xl font-extrabold text-foreground-muted sm:text-5xl"
              >CRUx</span
            ><span class="z-50 text-3xl font-extrabold text-primary sm:text-5xl"
              >.</span
            >
          </div>
          <div class="w-4/5 pt-8 sm:w-3/5">
            <span
              class="text-base font-semibold text-foreground-muted sm:text-xl lg:text-2xl xl:text-3xl"
              >The Programming and Computing Club of BITS Pilani, Hyderabad
              Campus</span
            >
          </div>
          <div
            class="flex flex-row items-center justify-start space-x-8 pt-8 lg:pl-4"
          >
            {
              [
                { svg: GithubIcon, href: "https://github.com/crux-bphc" },
                {
                  svg: InstagramIcon,
                  href: "https://www.instagram.com/cruxbphc/",
                },
                {
                  svg: LinkedInIcon,
                  href: "https://www.linkedin.com/company/crux-bphc?originalSubdomain=in",
                },
                {
                  svg: MailIcon,
                  href: "mailto:crux@hyderabad.bits-pilani.ac.in",
                },
              ].map((icon) => (
                <a href={icon.href} target="_blank">
                  <div class="size-6 rounded-full fill-foreground-muted transition duration-200 ease-in-out hover:fill-primary sm:size-8 md:size-10 lg:size-12">
                    <Fragment set:html={icon.svg} />
                  </div>
                </a>
              ))
            }
          </div>
        </div>
        <div
          class="absolute right-8 top-80 flex w-fit justify-end text-right sm:right-20 sm:top-96 md:right-36"
        >
          <div class="w-4/5 pt-8 sm:w-3/5">
            <span
              class="text-base font-semibold text-foreground-muted sm:text-xl lg:text-2xl xl:text-3xl"
              >Dedicated to bettering computing skill on campus by developing
              open-source software, promoting Competitive Programming and
              participating in CTF events.</span
            >
          </div>
        </div>
      </div>

      <div class="flex snap-center items-center justify-center pb-40">
        <div class="bg-transparent backdrop-blur-xl backdrop-brightness-[80%]">
          <HomeCard
            imageURL="/crux.jpg"
            icons={[
              { svg: GithubIcon, href: "https://github.com/crux-bphc" },
              {
                svg: InstagramIcon,
                href: "https://www.instagram.com/cruxbphc/",
              },
              {
                svg: LinkedInIcon,
                href: "https://www.linkedin.com/company/crux-bphc?originalSubdomain=in",
              },
              {
                svg: MailIcon,
                href: "mailto:crux@hyderabad.bits-pilani.ac.in",
              },
            ]}
          />
        </div>
        <Footer />
      </div>
    </div>
  </main>
</Layout>
